@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy Used or New Laptop</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        /* Add your custom CSS styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
            text-align: center;
        }

        .call-section {
            background-color: #f0f0f0;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

            .call-section p {
                font-size: 18px;
                margin-bottom: 15px;
            }

        .call-button {
            display: block;
            width: 200px;
            margin: 0 auto;
            text-align: center;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
            cursor: pointer;
        }

            .call-button:hover {
                background-color: #0056b3;
            }

        .delivery-section {
            background-color: #dff0d8;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

            .delivery-section p {
                font-size: 18px;
                margin-bottom: 15px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Buy Used or New Laptop</h1>
        <!-- Laptop Images -->
        <div class="text-center mb-4">
            <img src="https://s3no.cashify.in/estore/cfa36187d62e44ffbafebafda34b6de3.webp?p=default&s=lg" alt="Used Laptop" class="img-fluid">
            <img src="https://s3no.cashify.in/estore/4010e5ba47b642d8886c32b43380c5ac.webp?p=default&s=lg" alt="New Laptop" class="img-fluid">
        </div>

        <!-- Call Section -->
        <div class="call-section">
            <p>Call now to find out the best deals on both used and new laptops!</p>
            <p>Our expert team is ready to assist you in choosing the perfect laptop.</p>
            <button class="call-button" onclick="showPhoneNumber()">Call Us</button>
        </div>

        <!-- Delivery Section -->
        <div class="delivery-section">
            <p>Enjoy free delivery on all orders!</p>
            <p>Get your laptop delivered to your doorstep with no extra cost.</p>
        </div>
    </div>

    <!-- Phone Number Modal -->
    <div class="modal fade" id="phoneNumberModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Call Us</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Phone Number: <strong>+91 9702547707</strong></p>
                    <p>Would you like to dial the number from your phone app?</p>
                </div>
                <div class="modal-footer">
                    <a href="tel:+919702547707" class="btn btn-primary">Dial</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for Modal -->
    <script>
        function showPhoneNumber() {
            $('#phoneNumberModal').modal('show');
        }
    </script>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
